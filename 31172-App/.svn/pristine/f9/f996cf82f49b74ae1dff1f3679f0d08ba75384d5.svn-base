<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        *{
            margin:0;
            padding:0;
            list-style-type: none;
        }
        .top{
            width:100%;
            height:28px;
            background-color:rgba(235, 235, 235, 0.404);
            padding:10px;
            display: -webkit-box;

        }
        a,img{
            border:0;
            text-decoration: none;
        }
        body{
            font: 15px/180% Arial,Helvetica,sans-serif,"新宋体" ;
        }
        .sdmenu{
            width:150px;
            margin: 0 20px;
            /* padding-bottom: 10px; */
            /* margin: 5px; */
  

        }
        .sdmenu div{
            background-color: rgba(238, 238, 238, 0);
            overflow: hidden;

        }
        .sdmenu div:first-child{
            background-color: rgba(249, 249, 249, 0);

        }
        .sdmenu div.collapsed{
            height: 25px;
        }
        .sdmenu div span{
            display: block;
            height: 15px;
            line-height: 15px;
            overflow: hidden;
            padding: 6px 15px;
            font-weight: bold;
            color:rgb(245, 245, 245);
            background-color:rgb(221, 142, 217);
            cursor:pointer;

        }
        .sdmenu div a{
            display: block;
            overflow: hidden;
            border-bottom: 1px solid rgba(235, 235, 235, 0.473);
            color: rgb(221, 142, 217);
            padding-left:15px;
        }
        .sdmenu div a:hover{
            background-color: rgba(221, 142, 217, 0.623);
        }
        .bianji{
            margin-top: 2px;
            border:1px solid #888;
            width:45px;
            height:20px;
            position: absolute;
            right:20px;
            text-align: center;
            line-height: 20px;
            
        }



    </style>
    <script src="../script/tools.js"></script>
    <script>
        window.onload=function(){
            /* 我们的每一个菜单都是一个div
                当div具有collapsed这个类时div就是折叠状态
                当div设有这个类时，div就是展开状态 */

            /* 点击菜单切换显示状态 */
            var menuSpan=document.querySelectorAll(".menuSpan");

            /* 定义一个变量，来保存当前打开的菜单 */
            var openDiv=menuSpan[0].parentNode;

            
            //为span绑定单机响应函数
            for(var i=0;i<menuSpan.length;i++){
                menuSpan[i].onclick=function(){
                    //this代表我当前点击的span
                    //获取当前span的父元素
                    var parentDiv=this.parentNode;
                    
                    /* 切换菜单的显示状态 */
                    toggleMenu(parentDiv);
                    //如果点击的不等于打开的，则关闭之前打开的&&如果打开的里面没有collapsed
                    if(openDiv!=parentDiv && !hasClass(openDiv,"collapsed")){
                        //打开菜单以后，应该关闭之前打开的菜单
                        /* toggleClass(openDiv,"collapsed"); */

                    toggleMenu(openDiv);

                    }
                    //修改openDiv为当前打开的菜单
                    openDiv=parentDiv;
                };
            }

            //切换菜单的折叠显示状态
            function toggleMenu(obj){
                    //切换类之前，获取元素高度
                    var begin=obj.offsetHeight;
                    //切换parentDiv的显示
                    toggleClass(obj,"collapsed");

                    //在切换类之后读取一个高度
                    var end=obj.offsetHeight;

                    //动画效果就是由begin向end过度
                    //将元素的高度重置为begin，这样就可以进行动画操作
                    obj.style.height=begin+"px";
                    move(obj,"height",end,10,function(){
                        //添加内联样式后，内联样式级别最高，高度会一直不变
                        //所以执行完move函数后将内联样式删除（设置为空串）
                        obj.style.height="";
                    });
            }
            
            
        };
    </script>
</head>
<body>
    <div class="top">
        <div id="my_menu" class="sdmenu">
            <div class="collapsed" >
                <span class="menuSpan">时间</span>
                <a href="#">全部</a>
                <a href="#">2022</a>
                <a href="#">2021</a>
                <a href="#">2019</a>               
            </div>
            
        </div>
        <div class="bianji"><p style="color: rgb(87, 87, 87);font-weight: 200;font-size: 14px;">编辑</p></div>
    </div>
    
</body>
</html>